<%	if	notice	%>
  <div	class="alert	alert-success	alert-dismissible"	role="alert">
    <button	type="button"	class="close"	data-dismiss="alert"	aria-label="Close">
    <span	ari a-hidden="true">&times;</span></button>
    <p	id="notice"><%=	notice	%></p>
  </div> 
<%	end	%>

<h1 class="sub-header">USER管理</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th>ユーザ名</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '詳細', user , class: 'btn btn-default'%></td>
        <td><%= link_to '編集', edit_user_path(user), class: 'btn btn-default' %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

