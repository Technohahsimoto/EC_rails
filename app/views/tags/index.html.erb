<%	if	notice	%>
  <div	class="alert	alert-success	alert-dismissible"	role="alert">
    <button	type="button"	class="close"	data-dismiss="alert"	aria-label="Close">
    <span	ari a-hidden="true">&times;</span></button>
    <p	id="notice"><%=	notice	%></p>
  </div> 
<%	end	%>

<h1 class="sub-header">TAGS管理</h1>
<div class="table-responsive">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>タグ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to '編集', edit_tag_path(tag), class: 'btn btn-default'  %></td>
        <td><%= link_to '削除', tag, method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

