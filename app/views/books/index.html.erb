<%	if	notice	%>
  <div	class="alert	alert-success	alert-dismissible"	role="alert">
    <button	type="button"	class="close"	data-dismiss="alert"	aria-label="Close">
    <span	ari a-hidden="true">&times;</span></button>
    <p	id="notice"><%=	notice	%></p>
  </div> 
<%	end	%>
<h1 class="sub-header">Books　一覧</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>著者</th>
        <th>出版日</th>
        <th>商品表示</th>
        <th>値段</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.published_on %></td>
          <td><%= book.showing %></td>
          <td><%= book.price %></td>
          <td><%= link_to '詳細', book , class: 'btn btn-default'%></td>
          <td><%= link_to '編集', edit_book_path(book) , class: 'btn btn-default'%></td>
          <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除していいですか？' } , class: 'btn btn-default'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to '新規登録', new_book_path, class: 'btn btn-default' %>
